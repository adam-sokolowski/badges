{
  "name": "@adso-ts/badges",
  "version": "1.0.2",
  "description": "Jest coverage badges generator",
  "repository": {
    "type": "git",
    "url": "git@github.com:adam-sokolowski/badges.git"
  },
  "keywords": [
    "ts",
    "es6",
    "commonjs",
    "jest",
    "utils",
    "badge",
    "coverage"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "badge": "dist/generateBadges.js"
  },
  "scripts": {
    "build": "tsc --module commonjs",
    "build:watch": "yarn build -w",
    "test": "jest",
    "badges": "yarn generateBadges",
    "test:watch": "jest --watchAll",
    "lint": "tsc --noEmit && eslint '*/**/*.ts' --quiet --fix",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "reset:githooks": "rm -rf ./.git/hooks/* && rm -rf node_modules/husky && yarn install --check-files"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "yarn lint"
      ],
      "pre-push": [
        "yarn test"
      ]
    }
  },
  "author": "Adam Soko≈Çowski <adam.sokolowski@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "~25.1.0",
    "@types/lodash": "4.14.150",
    "@typescript-eslint/eslint-plugin": "~2.31.0",
    "@typescript-eslint/parser": "~2.31.0",
    "eslint": "~6.8.0",
    "husky": "~4.2.5",
    "jest": "~26.0.0",
    "lodash": "4.17.15",
    "standard-version": "~7.1.0",
    "ts-jest": "~25.4.0",
    "tslib": "~1.11.0",
    "typescript": "~3.8.0"
  },
  "dependencies": {
    "@types/node": "13.13.4"
  }
}
